@model IEnumerable<ExamenTraining.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>


@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="@Html.DisplayFor(modelItem => item.Image)" class="img-responsive">
                        <div class="caption">
                            <div class="row">
                                <div class="col-md-6 col-xs-6">
                                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                                </div>
                                <div class="col-md-6 col-xs-6 price">
                                    <h3>
                                        <label>@Html.DisplayFor(modelItem => item.Price)</label>
                                    </h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="@Url.Action("Details", "Details", new { id=item.Id })" class="btn btn-primary btn-product"><span class="glyphicon glyphicon-list-alt"></span>  Details</a>
                                </div>
                                <div class="col-md-6">
                                    <a href="#" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Buy</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
