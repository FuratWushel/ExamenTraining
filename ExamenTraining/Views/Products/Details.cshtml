@model ExamenTraining.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div class="container-fluid">
    <div class="content-wrapper">
        <div class="item-container">
            <div class="container">
                <div class="col-md-12">
                    <div class="product col-md-3 service-image-left">

                        <center>
                            <img id="item-display" src"="@Html.DisplayFor(model => model.Image)" alt="">
                        </center>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="product-title">@Html.DisplayFor(model => model.Name)</div>
                    <div class="product-desc">@Html.DisplayFor(model => model.Description)</div>
                    <hr>
                    <div class="product-price">€@Html.DisplayFor(model => model.Price)</div>
                    <hr>
                    <div class="btn-group cart">
                        <button type="button" class="btn btn-success">
                            Add to cart
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>